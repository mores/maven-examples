<jboss-deployment-structure xmlns="urn:jboss:deployment-structure:1.2">
    <deployment>
	<!-- this allows our own log4j2 to work from the war -->
        <exclusions>
            <module name="org.apache.logging.log4j" />
        </exclusions>
        <exclude-subsystems>
            <subsystem name="logging"/>
        </exclude-subsystems>
    </deployment>
</jboss-deployment-structure>
