<?xml version="1.0" encoding="UTF-8"?>
<!-- XML header, nothing new -->
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>

        <parent>
                <groupId>org.test</groupId>
                <artifactId>granite-helloworld</artifactId>
                <version>0.1</version>
        </parent>

	<groupId>org.test</groupId>
        <artifactId>swf</artifactId>
        <version>0.1</version>
        <name>${pom.artifactId}</name>

	<packaging>swf</packaging>

	<properties>
                <my_basedir>${basedir}/../</my_basedir>
        </properties>

	<repositories>
		<repository>
			<id>sonatype</id>
			<url>http://repository.sonatype.org/content/groups/flexgroup/</url>
		</repository>
	</repositories>

	<dependencies> 
		<dependency> 
			<groupId>com.adobe.flex.framework</groupId> 
			<artifactId>flex-framework</artifactId> 
			<version>3.2.0.3958</version> 
			<type>pom</type> 
		</dependency> 
	</dependencies>

	<build>
		<finalName>hello</finalName>
		<sourceDirectory>src/main/flex</sourceDirectory>
		<plugins>
			<plugin>
				<groupId>org.sonatype.flexmojos</groupId>
				<artifactId>flexmojos-maven-plugin</artifactId>
				<version>3.2.0</version>
				<extensions>true</extensions>
				<configuration>
					<contextRoot>helloworld</contextRoot>
					<headlessServer>true</headlessServer>
				</configuration>
			</plugin>

			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>0</id>
						<phase>package</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<copy file="${project.build.directory}/${project.build.finalName}.swf" tofile="${my_basedir}/www/src/main/webapp/${project.build.finalName}.swf" />
							</tasks>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
